# デモ環境用環境変数サンプル
# 本番利用時は必ず値を変更してください

# アプリケーション基本設定
RAILS_ENV=production
SECRET_KEY_BASE=your-secret-key-base-here
DATABASE_URL=postgresql://username:password@localhost/dentalsystem_demo

# デモモード設定
DEMO_MODE_ENABLED=true
DEMO_UPDATE_INTERVAL=2000
DEMO_DATA_SIZE=medium
DEMO_PERFORMANCE_MODE=optimized

# デモアカウント（本番では必ず変更）
DEMO_ADMIN_EMAIL=admin@dentalsystem.demo
DEMO_ADMIN_PASSWORD=change-this-password
DEMO_STAFF_EMAIL=staff@dentalsystem.demo  
DEMO_STAFF_PASSWORD=change-this-password
DEMO_DOCTOR_EMAIL=doctor@dentalsystem.demo
DEMO_DOCTOR_PASSWORD=change-this-password
DEMO_READONLY_EMAIL=demo@dentalsystem.demo
DEMO_READONLY_PASSWORD=change-this-password

# セキュリティ設定
DEMO_SESSION_TIMEOUT=1800
DEMO_MAX_DURATION=7200
DEMO_RATE_LIMIT=1000
DEMO_IP_WHITELIST=

# Redis設定
REDIS_URL=redis://localhost:6379/1

# WebSocket設定
WEBSOCKET_ENABLED=true
WEBSOCKET_URL=wss://dentalsystem-demo.herokuapp.com/cable

# AI統合設定（デモ用）
AI_DEMO_MODE=true
AI_PREDICTION_ACCURACY=94.2
AI_OPTIMIZATION_LEVEL=maximum

# パフォーマンス設定
PERFORMANCE_MONITORING=true
MEMORY_LIMIT_MB=128
CONCURRENT_USERS_MAX=50

# ログ設定
LOG_LEVEL=info
DEMO_LOG_ENABLED=true

# 外部サービス（デモでは無効）
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Heroku設定（デプロイ時）
HEROKU_APP_NAME=dentalsystem-demo
HEROKU_REGION=us