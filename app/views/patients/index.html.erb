<div class="patients-container min-h-screen bg-gray-50">
  <!-- ヘッダー部分 -->
  <div class="patients-header bg-white shadow-sm border-b border-gray-200 p-6">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">患者管理</h1>
        <p class="text-sm text-gray-600 mt-1">患者情報の登録・検索・管理を効率的に行います</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to new_patient_path, 
            class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          新規患者登録
        <% end %>
        
        <%= link_to patients_path(format: :csv), 
            class: "inline-flex items-center px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors shadow-sm" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          CSV出力
        <% end %>
      </div>
    </div>
  </div>

  <!-- 検索・フィルター部分 -->
  <div class="patients-search bg-gray-50 p-6 border-b border-gray-200">
    <div class="max-w-7xl mx-auto">
      <%= form_with url: patients_path, method: :get, local: true, 
          class: "max-w-4xl mx-auto",
          data: { controller: "patient-search", action: "submit->patient-search#search" } do |form| %>
        <div class="flex space-x-4">
          <div class="flex-1 relative">
            <%= form.text_field :search, 
                value: params[:search],
                placeholder: "患者名・電話番号・メールアドレスで検索...",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg placeholder-gray-400",
                id: "patient-search-input",
                autocomplete: "off",
                data: { "patient-search-target": "input" } %>
            
            <!-- リアルタイム検索結果表示エリア -->
            <div id="search-results" 
                 class="absolute top-full left-0 right-0 bg-white border border-gray-200 rounded-lg shadow-lg z-50 mt-1"
                 style="display: none;">
              <!-- 検索結果がここに動的に表示される -->
            </div>
          </div>
          
          <button type="submit" 
                  class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            検索
          </button>
          
          <% if params[:search].present? %>
            <%= link_to patients_path, 
                class: "px-4 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors flex items-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              クリア
            <% end %>
          <% end %>
        </div>
        
        <% if params[:search].present? %>
          <div class="mt-3 text-sm text-gray-600">
            「<span class="font-medium text-gray-900"><%= params[:search] %></span>」の検索結果: 
            <span class="font-medium text-blue-600"><%= @patients.total_count %></span>件
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- 患者テーブル -->
  <%= turbo_frame_tag "patients" do %>
    <div id="patients-grid" class="mt-8 flex flex-col">
      <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    患者番号
                  </th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    氏名
                  </th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    カナ
                  </th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    電話番号
                  </th>
                  <th scope="col" class="hidden md:table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    メール
                  </th>
                  <th scope="col" class="hidden lg:table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    最終来院日
                  </th>
                  <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                    <span class="sr-only">操作</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @patients.each do |patient| %>
                  <tr>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                      <%= patient.patient_number %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                      <%= link_to patient.name, patient_path(patient), 
                          class: "text-indigo-600 hover:text-indigo-900" %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= patient.name_kana %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= patient.phone %>
                    </td>
                    <td class="hidden md:table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= patient.email %>
                    </td>
                    <td class="hidden lg:table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <% last_appointment = patient.appointments.maximum(:appointment_date) %>
                      <%= last_appointment ? l(last_appointment, format: :short) : "未来院" %>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <%= link_to "編集", edit_patient_path(patient), 
                          class: "text-indigo-600 hover:text-indigo-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- ページネーション -->
    <% if @patients.total_pages > 1 %>
      <div class="mt-4 flex items-center justify-between">
        <div class="flex flex-1 justify-between sm:hidden">
          <%= link_to_prev_page @patients, "前へ", 
              class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to_next_page @patients, "次へ", 
              class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
        <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              全<span class="font-medium"><%= @patients.total_count %></span>件中
              <span class="font-medium"><%= @patients.offset_value + 1 %></span> -
              <span class="font-medium"><%= @patients.offset_value + @patients.length %></span>件を表示
            </p>
          </div>
          <div>
            <%= paginate @patients %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <!-- CSVエクスポート -->
  <div class="mt-8 flex justify-end">
    <%= link_to "CSVエクスポート", patients_path(format: :csv, search: params[:search]), 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
  </div>
</div>