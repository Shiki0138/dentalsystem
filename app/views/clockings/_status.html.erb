<div class="bg-gray-50 rounded-lg p-4">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm text-gray-600">現在のステータス</p>
      <p class="text-2xl font-bold">
        <% case employee.current_clocking_status %>
        <% when :clocked_in %>
          <span class="text-green-600">勤務中</span>
        <% when :clocked_out %>
          <span class="text-gray-600">退勤済み</span>
        <% when :on_break %>
          <span class="text-yellow-600">休憩中</span>
        <% when :working %>
          <span class="text-green-600">勤務中</span>
        <% else %>
          <span class="text-gray-500">未出勤</span>
        <% end %>
      </p>
    </div>
    
    <div class="text-right">
      <% if @last_clocking %>
        <p class="text-sm text-gray-600">最終打刻</p>
        <p class="text-lg font-medium"><%= l(@last_clocking.clocked_at, format: :short) %></p>
      <% end %>
    </div>
  </div>
</div>