<div class="appointments-new">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-2xl font-semibold text-gray-900">新規予約</h1>
      <p class="mt-1 text-sm text-gray-600">予約情報を入力してください</p>
    </div>

    <%= form_with model: @appointment, local: true, class: "space-y-6" do |f| %>
      <% if @appointment.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">エラーが発生しました</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul role="list" class="list-disc space-y-1 pl-5">
                  <% @appointment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6">
              <label for="appointment_patient_id" class="block text-sm font-medium text-gray-700">
                患者 <span class="text-red-500">*</span>
              </label>
              <%= f.collection_select :patient_id, Patient.active.order(:name), :id, :name,
                  { prompt: "患者を選択してください", selected: params[:patient_id] },
                  { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="appointment_appointment_date" class="block text-sm font-medium text-gray-700">
                予約日時 <span class="text-red-500">*</span>
              </label>
              <%= f.datetime_local_field :appointment_date, 
                  class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="appointment_user_id" class="block text-sm font-medium text-gray-700">
                担当スタッフ
              </label>
              <%= f.collection_select :user_id, User.all.order(:name), :id, :name,
                  { prompt: "スタッフを選択", include_blank: true },
                  { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
            </div>

            <div class="col-span-6">
              <label for="appointment_notes" class="block text-sm font-medium text-gray-700">
                メモ
              </label>
              <%= f.text_area :notes, rows: 3, 
                  class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
        </div>

        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
          <%= link_to "キャンセル", appointments_path, 
              class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= f.submit "予約を作成", 
              class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>