<%= turbo_frame_tag "appointments_index" do %>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <h1 class="text-2xl font-bold text-gray-900">予約管理</h1>
          <div class="flex items-center space-x-4">
            <%= link_to "新規予約", "/book/manual", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            <%= link_to "ダッシュボード", root_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
      <!-- Filters -->
      <div class="mb-6 bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">絞り込み</h3>
        <%= form_with url: appointments_path, method: :get, class: "grid grid-cols-1 gap-4 sm:grid-cols-4", data: { turbo_frame: "appointments_index" } do |form| %>
          <div>
            <%= form.date_field :date, value: params[:date], class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "日付" %>
          </div>
          <div>
            <%= form.select :status, options_for_select([
              ['全て', ''],
              ['予約済', 'booked'],
              ['診察済', 'visited'],
              ['キャンセル', 'cancelled'],
              ['無断欠席', 'no_show'],
              ['完了', 'done'],
              ['精算済', 'paid']
            ], params[:status]), {}, { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
          </div>
          <div>
            <%= form.text_field :patient_name, value: params[:patient_name], class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "患者名" %>
          </div>
          <div class="flex items-end">
            <%= form.submit "検索", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        <% end %>
      </div>

      <!-- Appointments List -->
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% if @appointments.any? %>
            <% @appointments.each do |appointment| %>
              <li>
                <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-gray-200">
                          <span class="text-sm font-medium leading-none text-gray-700">
                            <%= appointment.patient.name[0] %>
                          </span>
                        </span>
                      </div>
                      <div class="ml-4">
                        <div class="flex items-center">
                          <div class="text-sm font-medium text-gray-900">
                            <%= appointment.patient.name %>
                          </div>
                          <% if appointment.patient.name_kana %>
                            <div class="ml-2 text-sm text-gray-500">
                              (<%= appointment.patient.name_kana %>)
                            </div>
                          <% end %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= l(appointment.appointment_date, format: :long) %>
                          <% if appointment.treatment_type %>
                            ・<%= appointment.treatment_type %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <div class="flex items-center space-x-4">
                      <!-- Status Badge -->
                      <% status_color = case appointment.status
                         when 'booked' then 'bg-blue-100 text-blue-800'
                         when 'visited' then 'bg-green-100 text-green-800'
                         when 'cancelled' then 'bg-red-100 text-red-800'
                         when 'no_show' then 'bg-gray-100 text-gray-800'
                         when 'done' then 'bg-purple-100 text-purple-800'
                         when 'paid' then 'bg-indigo-100 text-indigo-800'
                         else 'bg-gray-100 text-gray-800'
                         end %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_color %>">
                        <%= t("appointment.status.#{appointment.status}") %>
                      </span>
                      
                      <!-- Actions -->
                      <div class="flex items-center space-x-2">
                        <%= link_to "詳細", appointment_path(appointment), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
                        
                        <% if appointment.booked? %>
                          <%= link_to "来院", visit_appointment_path(appointment), method: :patch, 
                                     class: "text-green-600 hover:text-green-900 text-sm font-medium",
                                     data: { confirm: "来院処理を実行しますか？" } %>
                          <%= link_to "キャンセル", cancel_appointment_path(appointment), method: :patch,
                                     class: "text-red-600 hover:text-red-900 text-sm font-medium",
                                     data: { confirm: "予約をキャンセルしますか？" } %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  
                  <% if appointment.notes.present? %>
                    <div class="mt-2 text-sm text-gray-600">
                      <span class="font-medium">備考:</span> <%= appointment.notes %>
                    </div>
                  <% end %>
                </div>
              </li>
            <% end %>
          <% else %>
            <li>
              <div class="px-4 py-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="mt-2 text-sm text-gray-500">予約が見つかりませんでした</p>
                <%= link_to "新規予約を作成", "/book/manual", class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @appointments.respond_to?(:current_page) %>
        <div class="mt-6 flex justify-center">
          <%= paginate @appointments, theme: 'twitter_bootstrap_4' %>
        </div>
      <% end %>
    </main>
  </div>
<% end %>