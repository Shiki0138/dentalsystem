<%= turbo_frame_tag "appointment_detail" do %>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <div class="flex items-center">
            <%= link_to appointments_path, class: "mr-4 text-gray-600 hover:text-gray-900" do %>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            <% end %>
            <h1 class="text-2xl font-bold text-gray-900">予約詳細</h1>
          </div>
          <div class="flex items-center space-x-4">
            <% if @appointment.booked? %>
              <%= link_to "来院", visit_appointment_path(@appointment), method: :patch,
                         class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700",
                         data: { confirm: "来院処理を実行しますか？" } %>
              <%= link_to "キャンセル", cancel_appointment_path(@appointment), method: :patch,
                         class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50",
                         data: { confirm: "予約をキャンセルしますか？" } %>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
        <!-- Left column -->
        <div class="lg:col-span-2">
          <!-- Appointment Info -->
          <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">予約情報</h3>
            <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">予約日時</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= l(@appointment.appointment_date, format: :long) %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">ステータス</dt>
                <dd class="mt-1">
                  <% status_color = case @appointment.status
                     when 'booked' then 'bg-blue-100 text-blue-800'
                     when 'visited' then 'bg-green-100 text-green-800'
                     when 'cancelled' then 'bg-red-100 text-red-800'
                     when 'no_show' then 'bg-gray-100 text-gray-800'
                     when 'done' then 'bg-purple-100 text-purple-800'
                     when 'paid' then 'bg-indigo-100 text-indigo-800'
                     else 'bg-gray-100 text-gray-800'
                     end %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_color %>">
                    <%= t("appointment.status.#{@appointment.status}") %>
                  </span>
                </dd>
              </div>
              <% if @appointment.treatment_type %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">治療内容</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @appointment.treatment_type %></dd>
                </div>
              <% end %>
              <% if @appointment.treatment_duration %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">予定時間</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @appointment.treatment_duration %>分</dd>
                </div>
              <% end %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">作成日時</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= l(@appointment.created_at, format: :long) %>
                </dd>
              </div>
              <% if @appointment.notes.present? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">備考</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @appointment.notes %></dd>
                </div>
              <% end %>
            </dl>
          </div>

          <!-- Patient Info -->
          <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">患者情報</h3>
            <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">氏名</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @appointment.patient.name %>
                  <% if @appointment.patient.name_kana %>
                    <span class="text-gray-500">(<%= @appointment.patient.name_kana %>)</span>
                  <% end %>
                </dd>
              </div>
              <% if @appointment.patient.patient_number %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">患者番号</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @appointment.patient.patient_number %></dd>
                </div>
              <% end %>
              <div>
                <dt class="text-sm font-medium text-gray-500">電話番号</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @appointment.patient.phone %>
                </dd>
              </div>
              <% if @appointment.patient.email %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">メールアドレス</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @appointment.patient.email %></dd>
                </div>
              <% end %>
              <% if @appointment.patient.age %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">年齢</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @appointment.patient.age %>歳</dd>
                </div>
              <% end %>
              <div>
                <dt class="text-sm font-medium text-gray-500">LINE連携</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <% if @appointment.patient.line_user_id.present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      連携済み
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      未連携
                    </span>
                  <% end %>
                </dd>
              </div>
            </dl>
            
            <div class="mt-6">
              <%= link_to "患者詳細を見る", patient_path(@appointment.patient),
                         class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          </div>
        </div>

        <!-- Right column -->
        <div>
          <!-- Quick Actions -->
          <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">クイックアクション</h3>
            <div class="space-y-3">
              <% if @appointment.booked? %>
                <%= link_to visit_appointment_path(@appointment), method: :patch,
                           class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700",
                           data: { confirm: "来院処理を実行しますか？" } do %>
                  <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  来院処理
                <% end %>
                
                <%= link_to cancel_appointment_path(@appointment), method: :patch,
                           class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50",
                           data: { confirm: "予約をキャンセルしますか？" } do %>
                  <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                  キャンセル
                <% end %>
              <% end %>
              
              <%= link_to edit_appointment_path(@appointment),
                         class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                編集
              <% end %>
            </div>
          </div>

          <!-- Timeline -->
          <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">履歴</h3>
            <div class="flow-root">
              <ul class="-mb-8">
                <li>
                  <div class="relative pb-8">
                    <div class="relative flex space-x-3">
                      <div>
                        <span class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center ring-8 ring-white">
                          <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                          </svg>
                        </span>
                      </div>
                      <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                        <div>
                          <p class="text-sm text-gray-500">予約作成</p>
                        </div>
                        <div class="text-right text-sm whitespace-nowrap text-gray-500">
                          <%= l(@appointment.created_at, format: :short) %>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
                
                <% if @appointment.visited? || @appointment.done? || @appointment.paid? %>
                  <li>
                    <div class="relative pb-8">
                      <div class="relative flex space-x-3">
                        <div>
                          <span class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center ring-8 ring-white">
                            <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                          </span>
                        </div>
                        <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                          <div>
                            <p class="text-sm text-gray-500">来院・診察</p>
                          </div>
                          <div class="text-right text-sm whitespace-nowrap text-gray-500">
                            <%= l(@appointment.visited_at || @appointment.updated_at, format: :short) %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
                
                <% if @appointment.cancelled? %>
                  <li>
                    <div class="relative">
                      <div class="relative flex space-x-3">
                        <div>
                          <span class="h-8 w-8 rounded-full bg-red-500 flex items-center justify-center ring-8 ring-white">
                            <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                          </span>
                        </div>
                        <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                          <div>
                            <p class="text-sm text-gray-500">キャンセル</p>
                          </div>
                          <div class="text-right text-sm whitespace-nowrap text-gray-500">
                            <%= l(@appointment.cancelled_at || @appointment.updated_at, format: :short) %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
<% end %>