<script>
class PredictiveAnalytics {
  constructor() {
    this.initCharts();
    this.startRealtimeUpdates();
    this.initCollaboration();
  }

  initCharts() {
    // Chart.jsを使用した需要予測グラフ
    const ctx = document.getElementById('demand-prediction-chart');
    if (ctx) {
      this.demandChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: this.generateDateLabels(30),
          datasets: [{
            label: '予測予約数',
            data: this.generatePredictionData(30),
            borderColor: 'rgb(99, 102, 241)',
            backgroundColor: 'rgba(99, 102, 241, 0.1)',
            tension: 0.4
          }, {
            label: '信頼区間',
            data: this.generateConfidenceInterval(30),
            borderColor: 'rgba(99, 102, 241, 0.3)',
            backgroundColor: 'rgba(99, 102, 241, 0.05)',
            fill: true,
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              position: 'bottom'
            }
          }
        }
      });
    }
  }

  startRealtimeUpdates() {
    setInterval(() => {
      this.updatePredictions();
      this.updateAnomalyDetection();
      this.updateCollaboration();
    }, 5000);
  }

  updatePredictions() {
    // 予測値の更新
    const elements = {
      'next-week-bookings': Math.floor(Math.random() * 20 + 150),
      'month-revenue-prediction': `¥${(Math.random() * 0.5 + 3).toFixed(1)}M`,
      'efficiency-hours': Math.floor(Math.random() * 5 + 10),
      'anomaly-score': Math.floor(Math.random() * 2)
    };

    Object.entries(elements).forEach(([id, value]) => {
      const element = document.getElementById(id);
      if (element) {
        element.textContent = value;
      }
    });
  }

  updateAnomalyDetection() {
    const lastCheck = document.getElementById('last-check-time');
    if (lastCheck) {
      lastCheck.textContent = '今';
    }
  }

  initCollaboration() {
    // WebSocket接続でリアルタイムコラボレーション
    console.log('Collaboration features initialized');
  }

  generateDateLabels(days) {
    const labels = [];
    for (let i = 0; i < days; i++) {
      const date = new Date();
      date.setDate(date.getDate() + i);
      labels.push(date.toLocaleDateString('ja-JP', { month: 'short', day: 'numeric' }));
    }
    return labels;
  }

  generatePredictionData(days) {
    const data = [];
    let base = 20;
    for (let i = 0; i < days; i++) {
      base += Math.random() * 10 - 5;
      data.push(Math.max(10, base));
    }
    return data;
  }

  generateConfidenceInterval(days) {
    return this.generatePredictionData(days).map(v => v + Math.random() * 10);
  }
}

// ページ読み込み後に初期化
document.addEventListener('DOMContentLoaded', () => {
