<script>
// リアルタイム機能のJavaScript実装
class RealtimeDashboard {
  constructor() {
    this.updateInterval = 5000; // 5秒間隔
    this.startRealTimeUpdates();
    this.initializeWebSocket();
  }

  startRealTimeUpdates() {
    setInterval(() => {
      this.updateTime();
      this.updateKPIs();
      this.updateActivityFeed();
      this.updateLastUpdateTime();
    }, this.updateInterval);
  }

  updateTime() {
    const now = new Date();
    document.getElementById('realtime-time').textContent = 
      now.toLocaleTimeString('ja-JP', { hour: '2-digit', minute: '2-digit' });
    document.getElementById('realtime-date').textContent = 
      now.toLocaleDateString('ja-JP', { month: '2-digit', day: '2-digit', weekday: 'short' });
  }

  updateKPIs() {
    // 模擬的なリアルタイムデータ更新
    const bookings = document.getElementById('realtime-bookings');
    const revenue = document.getElementById('realtime-revenue');
    const performance = document.getElementById('system-performance');
    
    if (bookings) {
      const currentBookings = parseInt(bookings.textContent);
      bookings.textContent = currentBookings + Math.floor(Math.random() * 2);
    }
    
    if (revenue) {
      const currentRevenue = parseInt(revenue.textContent.replace(/[^0-9]/g, ''));
      const newRevenue = currentRevenue + Math.floor(Math.random() * 10000);
      revenue.textContent = `¥${Math.floor(newRevenue / 1000)}K`;
    }
  }

  updateActivityFeed() {
    const feed = document.getElementById('realtime-activity-feed');
    if (!feed) return;

    const activities = [
      { icon: '👤', message: '新規患者が登録されました', patient: '田中太郎', type: 'success' },
      { icon: '📅', message: '予約が確定されました', patient: '佐藤花子', type: 'info' },
      { icon: '✅', message: '診療が完了しました', patient: '鈴木一郎', type: 'success' },
      { icon: '📞', message: 'リコール通知を送信', patient: '15名の患者', type: 'warning' },
      { icon: '💰', message: '会計処理が完了', patient: '高橋美咲', type: 'success' }
    ];

    const randomActivity = activities[Math.floor(Math.random() * activities.length)];
    const timestamp = new Date().toLocaleTimeString('ja-JP');
    
    const activityElement = document.createElement('div');
    activityElement.className = `flex items-start space-x-3 p-4 bg-${randomActivity.type === 'success' ? 'green' : randomActivity.type === 'warning' ? 'yellow' : 'blue'}-50 rounded-xl animate-pulse`;
    activityElement.innerHTML = `
      <div class="text-2xl">${randomActivity.icon}</div>
      <div class="flex-1">
        <p class="text-sm font-medium text-gray-900">${randomActivity.message}</p>
        <p class="text-xs text-gray-500">${randomActivity.patient} • ${timestamp}</p>
      </div>
    `;

    feed.insertBefore(activityElement, feed.firstChild);
    
    // 最大10件まで表示
    while (feed.children.length > 10) {
      feed.removeChild(feed.lastChild);
    }
  }

  updateLastUpdateTime() {
    const lastUpdateElement = document.getElementById('last-update-time');
    if (lastUpdateElement) {
      lastUpdateElement.textContent = new Date().toLocaleTimeString('ja-JP');
    }
  }

  initializeWebSocket() {
    // WebSocket接続の初期化（実装時）
    console.log('WebSocket リアルタイム機能準備完了');
  }
}

// ページ読み込み完了後にリアルタイム機能を開始
document.addEventListener('DOMContentLoaded', () => {
  new RealtimeDashboard();
});
</script>

