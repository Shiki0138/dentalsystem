<!-- デモモードダッシュボード -->
<div class="min-h-screen bg-gray-50">
  <!-- デモモードヘッダー -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold">🦷 歯科医院予約管理システム - デモモード</h1>
          <p class="text-sm opacity-90 mt-1">実際の操作感をお試しください</p>
        </div>
        <div class="flex space-x-3">
          <%= button_to "デモデータ追加", demo_seed_data_path, method: :post, 
              class: "bg-white text-purple-600 px-4 py-2 rounded-lg font-medium hover:bg-gray-100" %>
          <%= button_to "データリセット", demo_reset_data_path, method: :post,
              data: { confirm: "デモデータをリセットしますか？" },
              class: "bg-red-500 text-white px-4 py-2 rounded-lg font-medium hover:bg-red-600" %>
          <%= button_to "デモ終了", demo_end_session_path, method: :post,
              class: "bg-gray-800 text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-900" %>
        </div>
      </div>
    </div>
  </div>

  <!-- メインコンテンツ -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 統計カード -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">デモ患者数</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_patients] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">今日の予約</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:today_appointments] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">今週の予約</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:this_week_appointments] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-100 rounded-lg">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">未送信リマインド</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:pending_reminders] %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- 機能ボタン -->
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">主要機能を試す</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <%= link_to phone_booking_appointments_path, class: "flex items-center p-4 bg-blue-50 rounded-lg hover:bg-blue-100 transition" do %>
            <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <h3 class="font-medium text-gray-900">電話予約受付</h3>
              <p class="text-sm text-gray-500">受付スタッフ向けの簡単予約登録</p>
            </div>
          <% end %>

          <%= link_to calendar_appointments_path, class: "flex items-center p-4 bg-green-50 rounded-lg hover:bg-green-100 transition" do %>
            <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <div>
              <h3 class="font-medium text-gray-900">予約カレンダー</h3>
              <p class="text-sm text-gray-500">月表示・週表示・日表示対応</p>
            </div>
          <% end %>

          <%= link_to patients_path, class: "flex items-center p-4 bg-purple-50 rounded-lg hover:bg-purple-100 transition" do %>
            <svg class="w-8 h-8 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <div>
              <h3 class="font-medium text-gray-900">患者管理</h3>
              <p class="text-sm text-gray-500">患者情報の登録・検索・編集</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- デモ患者リスト -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- 患者一覧 -->
      <div class="bg-white rounded-lg shadow">
        <div class="p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">デモ患者</h2>
          <div class="space-y-3">
            <% @demo_patients.each do |patient| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div>
                  <p class="font-medium text-gray-900"><%= patient.name %></p>
                  <p class="text-sm text-gray-500"><%= patient.phone %></p>
                </div>
                <div class="flex space-x-2">
                  <%= link_to "詳細", patient_path(patient), 
                      class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                  <%= link_to "予約", new_patient_appointment_path(patient), 
                      class: "text-green-600 hover:text-green-800 text-sm font-medium" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- 予約一覧 -->
      <div class="bg-white rounded-lg shadow">
        <div class="p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">今後の予約</h2>
          <div class="space-y-3">
            <% @demo_appointments.each do |appointment| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div>
                  <p class="font-medium text-gray-900">
                    <%= appointment.appointment_date.strftime("%m/%d %H:%M") %> - <%= appointment.patient.name %>
                  </p>
                  <p class="text-sm text-gray-500"><%= appointment.treatment_type %></p>
                </div>
                <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">
                  <%= appointment.status %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- 機能説明 -->
    <div class="mt-8 bg-blue-50 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-blue-900 mb-2">デモモードの使い方</h3>
      <ul class="space-y-2 text-sm text-blue-800">
        <li>• 「デモデータ追加」ボタンで、サンプル患者と予約を追加できます</li>
        <li>• 各機能ボタンから、実際の画面を操作できます</li>
        <li>• デモデータは本番データとは完全に分離されています</li>
        <li>• すべての機能を自由にお試しください</li>
      </ul>
    </div>
  </div>
</div>