# Production Environment Variables
# Copy to .env.production and fill in actual values

# Rails
RAILS_ENV=production
RACK_ENV=production
NODE_ENV=production
SECRET_KEY_BASE=your_secret_key_base_here
RAILS_MASTER_KEY=your_master_key_here

# Database
DATABASE_URL=postgresql://postgres:secure_password@db:5432/dental_system_production
POSTGRES_PASSWORD=secure_database_password

# Redis
REDIS_URL=redis://redis:6379/0

# Application Settings
CLINIC_NAME=さくら歯科クリニック
CLINIC_PHONE=03-1234-5678
CLINIC_EMAIL=info@sakura-dental.jp
DEFAULT_TIMEZONE=Asia/Tokyo

# Domain and SSL
DOMAIN_NAME=dental-system.example.com
SSL_ENABLED=true

# Email Settings (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# External APIs
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_TOKEN=your_line_channel_token

# Google APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# Twilio (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Monitoring
GRAFANA_CLOUD_API_KEY=your_grafana_cloud_api_key
UPTIME_ROBOT_API_KEY=your_uptime_robot_api_key
ROLLBAR_ACCESS_TOKEN=your_rollbar_token

# Error Reporting
SENTRY_DSN=your_sentry_dsn

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=dental-system-storage

# Security
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
JWT_SECRET=your_jwt_secret

# Business Settings
BUSINESS_START_HOUR=9
BUSINESS_END_HOUR=18
LUNCH_START_HOUR=12
LUNCH_END_HOUR=13
REMINDER_DAYS_BEFORE=7,3,1
DEFAULT_APPOINTMENT_DURATION=30

# Rate Limiting
RACK_ATTACK_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Performance
RAILS_CACHE_STORE=redis
RAILS_QUEUE_ADAPTER=sidekiq
SIDEKIQ_CONCURRENCY=5

# Logging
RAILS_LOG_LEVEL=info
LOG_TO_STDOUT=true

# Health Checks
HEALTH_CHECK_TOKEN=your_health_check_token